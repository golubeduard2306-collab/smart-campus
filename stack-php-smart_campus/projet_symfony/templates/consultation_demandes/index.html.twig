{% extends 'base.html.twig' %}

{% block title %}Hello ConsultationDemandesController!{% endblock %}

{% block body %}
<div class="page-container">
    <h1>Consulter les demandes</h1>

    <div class="card">
        <h2>Demandes</h2>

        <div class="search-container">
            <input type="text" id="searchInput" onkeyup="filterTable()" placeholder="Rechercher une salle (ex: D005)">
        </div>

        <div class="table-container">
            <table id="sallesTable">
                <thead>
                <tr>
                    <th>Salle</th>
                    <th>Type</th>
                    <th>Date</th>
                    <th>Commentaire</th>
                    <th>Confirmer</th>
                </tr>
                </thead>
                <tbody>
                {% for salle in salles %}
                    <tr>
                        <td>{{ salle.nomSalle }}</td>
                        <td>
                            <form action="{{ path('app_info_salle', {'nomSalle': salle.nomSalle}) }}" method="get">
                                <button type="submit" class="btn">Page</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2">Aucune salle trouvée.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


    <script>
        function filterTable() {
            const input = document.getElementById('searchInput');
            const filter = input.value.toLowerCase();
            const table = document.getElementById('sallesTable');
            const rows = table.getElementsByTagName('tr');

            // Parcourir toutes les lignes du tableau (sauf l’en-tête)
            for (let i = 1; i < rows.length; i++) {
                const cell = rows[i].getElementsByTagName('td')[0]; // Première colonne : nom de salle
                if (cell) {
                    const textValue = cell.textContent || cell.innerText;
                    if (textValue.toLowerCase().includes(filter)) {
                        rows[i].style.display = '';
                    } else {
                        rows[i].style.display = 'none';
                    }
                }
            }
        }
    </script>
    {% endblock %}
