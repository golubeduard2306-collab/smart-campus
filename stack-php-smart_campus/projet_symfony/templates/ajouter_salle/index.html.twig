{% extends 'base.html.twig' %}

{% block title %}Ajouter une nouvelle salle{% endblock %}

{% block body %}
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f7fa;
            text-align: center;
            padding: 60px;
        }

        h1 {
            font-size: 2em;
            font-weight: bold;
            margin-bottom: 40px;
        }

        .card {
            background-color: #98c1d9;
            padding: 40px;
            border-radius: 20px;
            max-width: 800px;
            margin: 0 auto;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        label {
            font-size: 1.1em;
            display: block;
            text-align: left;
            margin: 10px auto 5px;
            max-width: 500px;
        }

        input {
            padding: 10px;
            width: 80%;
            max-width: 500px;
            border-radius: 5px;
            border: none;
            background-color: #e0e0e0;
            margin-bottom: 20px;
            text-align: center;
        }

        button {
            background-color: #4caf50;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 15px 30px;
            font-size: 1em;
            cursor: pointer;
            transition: background-color 0.3s;
            width: 80%;
            max-width: 600px;
        }

        button:hover {
            background-color: #43a047;
        }

        .message {
            font-weight: bold;
            margin-top: 20px;
        }

        .message.success {
            color: green;
        }

        .message.error {
            color: red;
        }
    </style>

    <h1>Ajouter une nouvelle salle</h1>

    <div class="card">
        <p>Remplissez les informations de la salle à ajouter dans la base de données</p>

        {# Formulaire d’ajout de salle #}
        <form method="post" action="{{ path('app_ajouter_salle') }}" onsubmit="return confirmerAjout();">
            <label for="nom_salle">Nom de la salle :</label>
            <input type="text" id="nom_salle" name="nom_salle" placeholder="Ex : D207" required>

            <label for="etage">Étage :</label>
            <input type="number" id="etage" name="etage" placeholder="Ex : 2" required>

            <label for="nb_fenetres">Nombre de fenêtres :</label>
            <input type="number" id="nb_fenetres" name="nb_fenetres" placeholder="Ex : 4" required>

            <button type="submit">Ajouter la salle</button>
        </form>

        {# Message flash après ajout réussi #}
        {% for message in app.flashes('success') %}
            <div class="message success">{{ message }}</div>
        {% endfor %}

        {# Message flash en cas d'erreur #}
        {% for message in app.flashes('error') %}
            <div class="message error">{{ message }}</div>
        {% endfor %}
    </div>

    <script>
        function confirmerAjout() {
            return confirm("Voulez-vous vraiment ajouter cette salle ?");
        }
    </script>
{% endblock %}
