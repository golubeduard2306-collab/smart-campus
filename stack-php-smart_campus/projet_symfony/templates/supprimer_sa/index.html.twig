{% extends 'base.html.twig' %}

{% block title %}Supprimer un SA{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .page-container {
            font-family: Arial, sans-serif;
            background-color: #f5f7fa;
            text-align: center;
            padding: 60px;
            min-height: calc(100vh - 60px);
        }

        .page-container h1 {
            font-size: 2em;
            font-weight: bold;
            margin-bottom: 40px;
        }

        .page-container .alert {
            max-width: 1000px;
            margin: 0 auto 20px;
            padding: 15px;
            border-radius: 5px;
            font-size: 1em;
        }

        .page-container .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .page-container .alert-error {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .page-container .card {
            background-color: #8ecae6;
            padding: 40px;
            border-radius: 20px;
            max-width: 1000px;
            margin: 0 auto;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .page-container p {
            font-size: 1.1em;
            margin-bottom: 20px;
        }

        .page-container .search-container {
            margin-bottom: 20px;
        }

        .page-container input[type="text"] {
            width: 60%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            font-size: 1em;
        }

        .page-container table {
            width: 100%;
            border-collapse: collapse;
            background-color: #d9d9d9;
            border-radius: 10px;
            overflow: hidden;
        }

        .page-container th, .page-container td {
            padding: 10px;
            text-align: center;
        }

        .page-container th {
            font-weight: bold;
            border-bottom: 2px solid #666;
        }

        .page-container td {
            border-bottom: 1px solid #bbb;
        }

        .page-container tr:last-child td {
            border-bottom: none;
        }

        .page-container .btn {
            background-color: #f44336;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 8px 20px;
            cursor: pointer;
            transition: background-color 0.3s;
            min-width: 160px;
            width: 160px;
        }

        .page-container .btn:hover:not(:disabled) {
            background-color: #d32f2f;
        }

        .page-container .btn:disabled {
            background-color: #ccc;
            cursor: not-allowed;
            opacity: 0.6;
        }

        .page-container .table-container {
            max-height: 400px;
            overflow-y: auto;
            scrollbar-width: thin;
            scrollbar-color: #6ba6b6 #b5d5e0;
            border-radius: 10px;
        }

        .page-container .table-container::-webkit-scrollbar {
            width: 8px;
        }

        .page-container .table-container::-webkit-scrollbar-thumb {
            background-color: #6ba6b6;
            border-radius: 5px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="page-container">
    <h1>Supprimer un SA</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-error">{{ message }}</div>
    {% endfor %}

    <div class="card">
        <p>Supprimer un SA existant — sélectionnez la ligne correspondante et confirmez la suppression.</p>

        <div class="search-container">
            <input type="text" id="searchInput" onkeyup="filterTable()" placeholder="Rechercher avec le nom de la salle (ex: D004)">
        </div>

        <div class="table-container">
            <table id="saTable">
                <thead>
                <tr>
                    <th>Salle</th>
                    <th>SA (statut)</th>
                    <th>Suppression</th>
                </tr>
                </thead>
                <tbody>
                {% for sa in sas %}
                    <tr>
                        <td>{{ sa.getSalle() ? sa.getSalle().getNomSalle() : '—' }}</td>
                        <td>{{ sa.statut }}</td>
                        <td>
                            {% if sa.getSalle() %}
                                <button type="button" class="btn" disabled title="SA assigné à une salle">Suppression impossible</button>
                            {% else %}
                                <form method="post" action="{{ path('app_supprimer_sa') }}" onsubmit="return confirm('Voulez-vous vraiment supprimer le SA #{{ sa.id }} ?');">
                                    <input type="hidden" name="id" value="{{ sa.id }}">
                                    <button type="submit" class="btn">Supprimer</button>
                                </form>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucun SA trouvé.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <script>
        function confirmerSuppression() {
            const id = document.getElementById('id').value;
            // Affiche une boîte de confirmation
            return confirm("Voulez-vous vraiment supprimer le SA #" + id + " ?");
        }
        function filterTable() {
            const input = document.getElementById('searchInput');
            const filter = input.value.toUpperCase();
            const table = document.getElementById('saTable');
            const tr = table.getElementsByTagName('tr');

            for (let i = 1; i < tr.length; i++) {
                const tdId = tr[i].getElementsByTagName('td')[0];
                const tdStatut = tr[i].getElementsByTagName('td')[1];
                const tdSalle = tr[i].getElementsByTagName('td')[2];
                let txtValue = '';
                if (tdId) txtValue += tdId.textContent || tdId.innerText;
                if (tdStatut) txtValue += ' ' + (tdStatut.textContent || tdStatut.innerText);
                if (tdSalle) txtValue += ' ' + (tdSalle.textContent || tdSalle.innerText);

                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    tr[i].style.display = '';
                } else {
                    tr[i].style.display = 'none';
                }
            }
        }
    </script>
</div>
{% endblock %}