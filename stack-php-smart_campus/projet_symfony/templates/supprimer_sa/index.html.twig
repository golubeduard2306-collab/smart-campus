{% extends 'base.html.twig' %}

{% block title %}Hello SupprimerSaController!{% endblock %}

{% block body %}
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f7fa;
            text-align: center;
            padding: 60px;
        }

        h1 {
            font-size: 2em;
            font-weight: bold;
            margin-bottom: 40px;
        }

        .card {
            background-color: #98c1d9;
            padding: 40px;
            border-radius: 20px;
            max-width: 800px;
            margin: 0 auto;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        p {
            font-size: 1.3em;
            margin-bottom: 40px;
        }

        button {
            background-color: #4caf50;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 15px 30px;
            font-size: 1em;
            cursor: pointer;
            transition: background-color 0.3s;
            width: 80%;
            max-width: 600px;
        }

        button:hover {
            background-color: #43a047;
        }
    </style>


    <h1>Supprimer un SA existant</h1>

    <div class="card">
        <p>Supprimer un SA de la base de données</p>
        <button onclick="alert('Suppression confirmé !')">Confirmer la suppression</button>
    </div>
{% endblock %}
