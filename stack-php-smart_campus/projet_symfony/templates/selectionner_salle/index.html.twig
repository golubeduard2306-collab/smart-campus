{% extends 'base.html.twig' %}

{% block title %}Sélectionner une salle{% endblock %}

{% block body %}
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f7fa;
            text-align: center;
            padding: 60px;
        }

        h1 {
            font-size: 2em;
            font-weight: bold;
            margin-bottom: 40px;
        }

        .card {
            background-color: #8ecae6;
            padding: 40px;
            border-radius: 20px;
            max-width: 800px;
            margin: 0 auto;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            font-size: 1.4em;
            font-weight: bold;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #d9d9d9;
            border-radius: 10px;
            overflow: hidden;
        }

        th, td {
            padding: 10px;
            text-align: center;
        }

        th {
            font-weight: bold;
            border-bottom: 2px solid #666;
        }

        td {
            border-bottom: 1px solid #bbb;
        }

        tr:last-child td {
            border-bottom: none;
        }

        .btn {
            background-color: #4caf50;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 8px 20px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .btn:hover {
            background-color: #43a047;
        }

        .table-container {
            max-height: 250px;
            overflow-y: auto;
            scrollbar-width: thin;
            scrollbar-color: #6ba6b6 #b5d5e0;
            border-radius: 10px;
        }

        .table-container::-webkit-scrollbar {
            width: 8px;
        }

        .table-container::-webkit-scrollbar-thumb {
            background-color: #6ba6b6;
            border-radius: 5px;
        }
    </style>

    <h1>Sélectionner une salle</h1>

    <div class="card">
        <h2>Salles</h2>

        <div class="table-container">
            <table>
                <thead>
                <tr>
                    <th>Salle</th>
                    <th>Sélectionner la salle</th>
                </tr>
                </thead>
                <tbody>
                {% for salle in salles %}
                    <tr>
                        {# Appel explicite des getters pour éviter les problèmes de noms de propriétés #}
                        <td>{{ salle.getNomSalle() }}</td>
                        <td>
                            <form action="{{ path('app_info_salle', {'id_salle': salle.getId()}) }}" method="get">
                                <button type="submit" class="btn">Page</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2">Aucune salle trouvée.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
