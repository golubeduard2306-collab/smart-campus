{% extends 'base.html.twig' %}

{% block title %}Ajouter un nouveau SA{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .page-container {
            font-family: Arial, sans-serif;
            background-color: #f5f7fa;
            text-align: center;
            padding: 60px;
            min-height: calc(100vh - 60px);
        }

        .page-container h1 {
            font-size: 2em;
            font-weight: bold;
            margin-bottom: 40px;
        }

        .page-container .card {
            background-color: #98c1d9;
            padding: 40px;
            border-radius: 20px;
            max-width: 800px;
            margin: 0 auto;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .page-container p {
            font-size: 1.3em;
            margin-bottom: 40px;
        }

        .page-container button {
            background-color: #4caf50;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 15px 30px;
            font-size: 1em;
            cursor: pointer;
            transition: background-color 0.3s;
            width: 80%;
            max-width: 600px;
        }

        .page-container button:hover {
            background-color: #43a047;
        }

        .page-container .message {
            color: green;
            font-weight: bold;
            margin-top: 20px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="page-container">
    <h1>Ajouter un nouveau SA</h1>

    <div class="card">
        <p>Ajouter un nouveau SA dans la base de données</p>

        {# Formulaire qui envoie une requête POST au contrôleur #}
        <form method="post" action="{{ path('app_ajouter_sa') }}" onsubmit="return confirmerAjout();">
            <button type="submit">Ajouter un SA</button>
        </form>

        {# Message de confirmation #}
        {% for message in app.flashes('success') %}
            <div class="message">{{ message }}</div>
        {% endfor %}
    </div>

    <script>
        function confirmerAjout() {
            // Affiche une boîte de confirmation
            return confirm("Voulez-vous vraiment ajouter un nouveau SA ?");
        }
    </script>
</div>
{% endblock %}
