{% extends 'base.html.twig' %}

{% block title %}Ajouter un nouveau SA{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .page-container {
            font-family: Arial, sans-serif;
            background-color: #f5f7fa;
            text-align: center;
            padding: 60px;
            min-height: calc(100vh - 60px);
        }

        .page-container h1 {
            font-size: 2em;
            font-weight: bold;
            margin-bottom: 40px;
        }

        .page-container .card {
            background-color: #8ecae6;
            padding: 40px;
            border-radius: 20px;
            max-width: 800px;
            margin: 0 auto;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .page-container p {
            font-size: 1.3em;
            margin-bottom: 40px;
        }

        .page-container button {
            background-color: #4caf50;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 15px 30px;
            font-size: 1em;
            cursor: pointer;
            transition: background-color 0.3s;
            width: 80%;
            max-width: 600px;
        }

        .page-container button:hover {
            background-color: #43a047;
        }

        .page-container .message {
            color: green;
            font-weight: bold;
            margin-top: 20px;
        }

        .page-container .error-message {
            color: #d32f2f;
            font-weight: bold;
            margin-top: 20px;
        }

        .page-container .form-group {
            margin-bottom: 30px;
        }

        .page-container label {
            display: block;
            font-size: 1.1em;
            margin-bottom: 10px;
            font-weight: bold;
        }

        .page-container input[type="number"] {
            width: 200px;
            padding: 10px;
            font-size: 1em;
            border-radius: 5px;
            border: 1px solid #ccc;
            text-align: center;
        }
    </style>
{% endblock %}

{% block body %}
<div class="page-container">
    <h1>Ajouter un SA</h1>

    <div class="card">
        <p>Ajouter un ou plusieurs SA dans la base de données</p>
        <p style="font-size: 1.1em; margin-bottom: 30px;">SA disponibles en stock : <strong>{{ nbSaDisponibles }}</strong></p>

        {# Formulaire qui envoie une requête POST au contrôleur #}
        <form method="post" action="{{ path('app_ajouter_sa') }}" onsubmit="return confirmerAjout();">
            <div class="form-group">
                <label for="quantite">Quantité de SA à ajouter :</label>
                <input type="number" id="quantite" name="quantite" value="1" min="1" max="100" required>
            </div>
            
            <button type="submit">Ajouter la quantité</button>
        </form>

        {# Messages de confirmation ou d'erreur #}
        {% for message in app.flashes('success') %}
            <div class="message">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="error-message">{{ message }}</div>
        {% endfor %}
    </div>

    <script>
        function confirmerAjout() {
            const quantite = document.getElementById('quantite').value;
            const message = quantite > 1 
                ? `Voulez-vous vraiment ajouter ${quantite} nouveaux SA ?`
                : "Voulez-vous vraiment ajouter un nouveau SA ?";
            return confirm(message);
        }
    </script>
</div>
{% endblock %}
